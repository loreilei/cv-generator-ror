<div class="d-flex flex-column align-self-stretch align-content-stretch text-center">
	<h2><%= @i18n["interests-title"] %></h2>
	<div class="d-flex flex-column ">
		<% @interests.each do |interest| %>
		<% interest.each do |key, values| %>
		<h3 class="content-interest-category align-self-start"><%= titleize(key) %></h3>
		<div class="d-flex flex-row justify-content-around">
			<% values.each do |value| %>
			<p class="text-center description"><%= titleize(value) %></p>
			<% end %>
		</div>
		<% end %>
		<% end %>
	</div>
</div>